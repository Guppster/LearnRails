<%= form_for @micropost do |f| %>
    <div class="form-group">
<%= f.label :content %>
<%= f.text_field :content, class: "form-control" %>
</div>
<div class="form-group">
<%= f.label :user_id %>
<%= f.text_field :user_id, class: "form-control" %>
</div>
<%= f.submit class: "btn btn-primary" %>
<% end %>
